[flake8]
# Line length should match Black's default
max-line-length = 88

# Compatibility with Black
extend-ignore = E203, W503

# Exclude common directories that shouldn't be checked
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    *.pyc,
    *.egg-info,
    .eggs

# Maximum complexity allowed for functions
max-complexity = 10

# Deal with type annotation imports
per-file-ignores =
    __init__.py:F401